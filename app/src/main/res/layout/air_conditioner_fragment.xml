<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/air_conditioner_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/app_margin_background"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:clickable="false"
        android:longClickable="false"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/app_fragment_background">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="50dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Modo de operação"
                    android:id="@+id/textView" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_below="@+id/textView"
                    android:layout_alignParentLeft="true" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_choose_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp">

                <Button
                    android:id="@+id/button_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="75dp"
                    android:background="@drawable/new_button"
                    android:drawableStart="@drawable/sunny" />

                <Button
                    android:id="@+id/button_cold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/new_button"
                    android:drawableStart="@drawable/snowflake1" />

            </LinearLayout>

            <!--<it.moondroid.seekbarhint.library.SeekBarHint-->
            <!--android:id="@+id/seekbar"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:max="1000"-->
            <!--hint:popupWidth="100dp"-->
            <!--hint:yOffset="15dp"-->
            <!--hint:popupStyle="fixed"/>-->

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="50dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:layout_alignBottom="@+id/display_curr_temp_air_cond"
                android:layout_alignParentLeft="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Temperatura"
                    android:id="@+id/textView42" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_below="@+id/textView42"
                    android:layout_alignParentLeft="true" />
            </RelativeLayout>

            <!--<SeekBar-->
                <!--android:id="@+id/air_cond_choose_temperature"-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="300dp"-->
                <!--android:layout_alignParentLeft="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:rotation="270"-->
                <!--android:layout_margin="10dp"-->
                <!--android:progressDrawable="@drawable/styled_progress_bar"-->
                <!--android:paddingLeft="15dp"-->
                <!--android:paddingRight="15dp"-->
                <!--android:indeterminate="false" />-->

            <SeekBar
                android:id="@+id/air_cond_choose_temperature"
                android:scaleY="1.5"
                android:scaleX="1.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="155dp"
                android:layout_below="@+id/layout_choose_temperature"
                android:layout_alignLeft="@+id/layout_choose_temperature"
                android:layout_alignRight="@+id/layout_choose_temperature"
                android:max="14"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/display_curr_temp_air_cond"
                android:layout_marginBottom="68dp"
                android:layout_alignBottom="@+id/air_cond_choose_temperature"
                android:layout_centerHorizontal="true" />

            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/imageView"-->
                <!--android:layout_below="@+id/air_cond_choose_temperature"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_marginTop="108dp"-->
                <!--android:src="@drawable/termometer"/>-->


        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
